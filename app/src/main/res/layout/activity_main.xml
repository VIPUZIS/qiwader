<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FDFDFD"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoqiwader"
        android:layout_width="378dp"
        android:layout_height="206dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textqiwader"
        app:srcCompat="@drawable/qiwader_logo" />

    <TextView
        android:id="@+id/textqiwader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/bruno_ace"
        android:text="QiwaderRU"
        android:textColor="#2B2D30"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nexthellobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="88dp"
        android:text="Далее"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SureStartText"
        android:layout_width="342dp"
        android:layout_height="28dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="47dp"
        android:text="Продолжая, вы соглашаетесь с пользовательским соглашением"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/HelloText"
        android:layout_width="329dp"
        android:layout_height="209dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="12dp"
        android:text="Мы рады видеть вас в нашей игре! QiwarderRU — это увлекательный кликер, который не даст вам заскучать.   Желаем вам увлекательного времяпрепровождения и высоких достижений! Пусть игра подарит вам массу положительных эмоций и ярких впечатлений."
        android:textColor="#2B2D30"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/nexthellobutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>